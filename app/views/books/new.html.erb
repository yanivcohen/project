<h1>Enter New Book</h1>



<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>

        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>

        <%= f.label :edition, "Edition"%>
        <%= f.text_field :edition%>

        <%= f.label :author, "Author" %>
        <%= f.text_field :author %>

        <%= f.label :isbn, "ISBN" %>
        <%= f.text_field :isbn %>





        <%= f.submit "Save New Book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>